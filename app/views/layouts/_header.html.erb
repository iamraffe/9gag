    <header>
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <nav class="navbar navbar-default" role="navigation">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <%= link_to root_path, id: "logo", class: "navbar-brand" do %>
                                <img src="http://placehold.it/60x20" alt=""/>
                            <% end %>
                        </div>
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                            <li class="active"><a href="/">Home</a></li>
                            <li class=""><a href="/">Popular</a></li>
                            <li class=""><a href="/">Mandoca</a></li>
                        </ul>
                        </div>
                        <div class="right-container">
                            <div class="user-box loggedout">
                            <% if logged_in? %>
                                <%= link_to '#' do %>
                                    <figure>
                                        <img src="assets/user-box.png" alt=""/>
                                    </figure>
                                    <span class="name">teothemes</span>
                                <% end %>
                                <div class="drop-down">
                                    <div class="counters-line">
                                        <div class="half"><span class="counter">321k</span><span class="desc">likes</span></div>
                                        <div class="half"><span class="counter">42</span><span class="desc">posts</span></div>
                                    </div>
                                    <div class="buttons-line">
                                        <%= link_to "New Mandoca", '#', class: "btn btn-primary btn-block custom-button" %>
                                        <%= link_to "Profile & Settings", current_user, class: "btn btn-primary btn-block custom-button" %>
                                        <%= link_to "Logout", logout_path, class: "btn btn-primary btn-block custom-button", method: "delete" %>
                                    </div>
                                </div>
                            <% else %>
                              <%= link_to login_path do %>
                                <span class="name"><i class="glyphicon glyphicon-plus"></i> LOGIN</span>
                              <% end %>
                            <div class="drop-down">
                                <div class="counters-line">
                                    <span>Login to post &amp; more</span>
                                </div>
                                <div class="buttons-line">
                                    <%= link_to "Login", '#loginModal', class: "btn btn-primary btn-block custom-button" %>
                                    <%= link_to "Register", '#registerModal', class: "btn btn-primary btn-block custom-button" %>
                                </div>
                            </div>
                            <% end %>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>